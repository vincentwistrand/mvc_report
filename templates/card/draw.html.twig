{% extends "base.html.twig" %}

{% block title %}Draw{% endblock %}

{% block content %}

{% if title == null %}
    <h2>Korten tog slut!</h2>
    <a href="{{ path('card-shuffle') }}">Dra nya</a>
{% endif %}

{% if title != null %}
    <h1>{{ title }}</h1>

    {% for card in drawn_cards %}
        {% if card.rank != "Joker" %}
            <i class="card-sprite {{ card.colour }}{{ card.rank }}"></i>
        {% endif %}
        {% if card.rank == "Joker" %}
            <img src="/img/{{ card.rank }}.JPG" width="135px" height="180px" alt="kort">
        {% endif %}
    {% endfor %}

    <h3>Kort kvar: {{ cards_left }}</h3>
{% endif %}
{% endblock %}
